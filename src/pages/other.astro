---
import Base from "../layouts/Base.astro";

const title = "Other";
const subtitle = "A small collection of other endeavors.";
---

<Base title={title}>
  <main class="container">
    <article>
      <header>
        <h1>{title}</h1>
        <span class="subtitle">{subtitle}</span>
      </header>
      <main class="other">
        <h2>IN THE WORKS...</h2>
      </main>
    </article>
  </main>
</Base>

<style>
  .other {
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0.25;
    height: 50vh;
    color: var(--text-accent);
  }
</style>
