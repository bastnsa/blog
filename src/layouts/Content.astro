---
import Base from "./Base.astro";
import { formatDate } from "../utils/date.ts";
import type { Content } from "../utils/types.ts";

const { frontmatter } = Astro.props as Content;
const pubDate = formatDate(frontmatter.pubDate.toString());
---

<Base title={frontmatter.title}>
  <main class="container">
    <article>
      <header>
        <h1>{frontmatter.title}</h1>
        <span class="subtitle">{`${pubDate} - ${frontmatter.topic}`}</span>
      </header>
      <main>
        <div class="markdown__content">
          <slot />
        </div>
      </main>
    </article>
  </main>
</Base>
